@model  Energiejournaal.Models.vwChart
@{
    ViewBag.Title = "CHARTS";
}
<div class="container">
    <div class="ep-decor-module">
        <div class="row">
            <div class="col-sm-12 col-lg-8">
                <div class="row">
                    <div class="col-sm-12 col-xl-6 fmt">
                        <div class="row">
                            <div class="col-sm-3 fpr">
                                <button type="submit" class="fp2 btn btn-block time-btns">1 MONTH</button>
                            </div>
                            <div class="col-sm-3 fpr">
                                <button type="submit" class="fp2 btn btn-block time-btns">6 MONTHS</button>
                            </div>
                            <div class="col-sm-3 fpr">
                                <button type="submit" class="fp2 btn btn-block time-btns">1 YEAR</button>
                            </div>
                            <div class="col-sm-3 fpr">
                                <button type="submit" class="fp2 btn btn-block time-btns">All time</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3 fpr fmt">
                        <div class="form-group">
                            <div class="input-group date" id="datetimepicker1">
                                <input type="text" class="form-control" placeholder="Select Date" />
                                <span class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3 fpr fmt">
                        <div class="form-group">
                            <div class="input-group date" id="datetimepicker2">
                                <input type="text" class="form-control" placeholder="Select Date" />
                                <span class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3 col-xl-4 fpr fmt">
                        <select class="form-control" id="Groups">
                            <option disabled selected>Select Group</option>
                            @foreach (var group in ViewBag.Groups)
                            {
                                <option>@group.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-sm-3 col-xl-4 fpr fmt">
                        <select class="form-control" id="Chart">
                            <option disabled selected>Select Chart</option>
                            @foreach (var chart in ViewBag.Charts)
                            {
                                <option>@chart.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-sm-12 fpr">
                        <div type="button" id="displayBtn" class="btn btn-primary btn-block col-sm-12 col-xl-4 fmt">Add Data</div>
                        <div type="button" id="displayBtn2" class="btn btn-primary btn-block col-sm-12 col-xl-4 fmt">Add Data</div>
                    </div>
                    <div id="Data" class="col-sm-12 col-xl-6">
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-4 fpr fmt">
                <div id="container1"></div>
                <div class="row">
                    <div class="col-sm-4"></div>
                    <a href="#" class="btn btn-primary btn-block col-sm-4 fp2">Meer Prijsinfo</a>
                    <div class="col-sm-4"></div>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-4 fpr fmt">
